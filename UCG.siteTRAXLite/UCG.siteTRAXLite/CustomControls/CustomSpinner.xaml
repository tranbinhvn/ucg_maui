<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UCG.siteTRAXLite.CustomControls.CustomSpinner">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <ActivityIndicator Color="#0074db" HeightRequest="100" WidthRequest="100" IsRunning="True" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label 
            Text="{Binding Message}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="18"/>
    </VerticalStackLayout>
</ContentView>
